<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="25dp" android:width="36dp"/>
            <gradient android:startColor="#1d867f" android:endColor="#48bbb4" android:angle="90"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:height="25dp" android:width="36dp"/>
            <solid android:width="1dp" android:color="#7ac4c7c8"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</selector>
